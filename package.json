  "devDependencies": {
    "@types/jquery": "^2.0.45",
    "@types/node": "^7.0.22",
    "ava": "^0.19.1",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.3",
    "del": "^2.2.2",
    "electron": "^1.6.10",
    "electron-packager": "^8.7.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-less": "^3.3.0",
